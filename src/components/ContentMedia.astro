---
// source: https://github.com/markteekman/accessible-astro-starter/blob/main/src/components/ContentMedia.astro
import Media from "../components/Media.astro";

const { imgSrc, reverseImg = false } = Astro.props;
---

<section class="my-64">
  <div class="container">
    <div class="grid grid-cols-1 gap-24 md:grid-cols-2">
      {!reverseImg ? <Media class="rounded-lg" src={imgSrc} /> : ""}
      <div class="space-content flex flex-col justify-center">
        <slot />
      </div>
      {reverseImg ? <Media class="rounded-lg" src={imgSrc} /> : ""}
    </div>
  </div>
</section>
