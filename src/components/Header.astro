---
// source: https://github.com/markteekman/accessible-astro-starter/blob/main/src/components/Header.astro
import Navigation from "../components/Navigation.astro";
import NavigationLink from "./NavigationLink.astro";
import SkipLinks from "../components/SkipLinks.astro";
import NavigationLinkIcon from "./NavigationLinkIcon.astro";
---

<header>
  <SkipLinks />
  <Navigation>
    <NavigationLink href="/" title="Home" />
    <NavigationLink href="/portfolio/" title="Portfolio" />
    <NavigationLink href="/blog/" title="Blog" />
    <NavigationLink href="/about/" title="About Me" />
    <NavigationLinkIcon
      href="https://www.linkedin.com/in/kruse-jessica"
      linkTitle="Go to LinkedIn page"
      iconName="ion:logo-linkedin"
    />
    <NavigationLinkIcon
      href="https://github.com/jesskruse"
      linkTitle="Go to GitHub page"
      iconName="ion:logo-github"
    />
  </Navigation>
</header>
