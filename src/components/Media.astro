---
// source: https://github.com/markteekman/accessible-astro-components/blob/main/Media.astro

interface Props {
  class?: string;
  src?: string;
  alt?: string;
}

const {
  class: classNames,
  src = "https://fakeimg.pl/640x360",
  alt = "",
} = Astro.props;
---

<img class={classNames} src={src} alt={alt} loading="lazy" decoding="async" />
